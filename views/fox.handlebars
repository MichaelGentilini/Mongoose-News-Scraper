<section>
  <div class="container">
    <div class="card bg-danger p-4  mt-5">
      <div class="container">

        <img class="card-img-top pb-3" src="/img/fox.jpg" alt="Card image cap">

        <div class="card mb-2 text-center">
          <a href="/fox/scrape" role="button" id="scrapeFox" class="btn  text-danger">Scrape Fox
            News</a>
        </div>

        {{#each articles}}
        <div class="card border-danger my-3 px-5 py-2">

          <div class="row">
            <div class="col-1 pt-2 pr-5">
              <div class="btn-group-vertical text-center ">

                {{#if note}}
                <a class="btn mt btn-warning text-white addNote" isNote=true><i
                    class="far fa-sticky-note fa-2x"></i></a>
                {{else}}
                <a class="btn mt btn-outline-warning text-warning addNote" isNote=false><i
                    class="far fa-sticky-note fa-2x"></i></a>
                {{/if}}

                {{#if saved}}
                <a class="btn btn-success text-white saveArticle " isSaved=true><i class="far fa-save fa-2x"></i></a>
                {{else}}
                <a class="btn btn-outline-success text-success saveArticle" isSaved=false><i
                    class="far fa-save fa-2x"></i></a>
                {{/if}}

                <a class="btn btn-outline-danger text-danger deleteArticle"><i class="fas fa-trash fa-2x"></i></a>

              </div>
            </div>

            <div class="col">
              <div class="card text-center" data-_id={{this._id}}>
                <div class="py-2">

                  <h3 class="card-header px-5 mb-2">
                    <a class="article-link text-left" target="_blank" href="{{this.link}}">{{this.title}}</a>
                  </h3>

                  <img class="article-image" src="{{this.image}}" class="mt-2">
                </div>
              </div>
            </div>
            <div class="col-1"></div>
          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</section>