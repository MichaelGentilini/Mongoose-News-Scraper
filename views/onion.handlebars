<section>
  <div class="container">

    <div class="container mt-5">
      <div class="card">
        <div class="container">

          <img class="card-img-top" src="/img/onion-header.jpg" alt="Card image cap">

          <div class="card-body border-warning">
            <h2 class="onion-card-header bg-warning text-white text-center pt-3 pb-3">Onion Results</h2>
            {{!-- <div class="card border-warning text-warning mt-3" id="onionResults"> --}}

            {{#unless articles.length}}
            <h4 class="text-center">Looks like we don't have any articles.</h4>
            {{/unless}}

            {{#each articles}}
            {{!-- <div class="mt-3"> --}}
            <div class="row">

              <div class="col-1 pr-5">
                <div class="btn-group-vertical text-center ">
                  <a class="btn mt btn-outline-warning text-warning notes"><i class="far fa-sticky-note"></i></a>
                  <a class="btn btn-outline-success text-success save"><i class="far fa-save"></i></a>
                  <a class="btn btn-outline-danger text-danger delete"><i class="fas fa-trash"></i></a>
                </div>
              </div>


              <div class="col">
                <div class="card" data-_id={{this._id}}>
                  <div>

                    <h3 class="card-header px-5 mb-2">
                      <a class="article-link" target="_blank" href="{{this.link}}">{{this.title}}</a>
                    </h3>

                    {{!-- {{#unless this.summary}}
                      <h6 class="mt-2 pl-5 text-left">Summary: Not available from {{this.source}}</h6>
                      {{/unless}}
                      <h6 class="mt-2 pl-5 text-left">{{this.summary}}</h6> --}}

                  </div>
                </div>
              </div>

              <div class="col-1"></div>
              {{/each}}

            </div>

            {{!-- </div> --}}
          </div>
        </div>
      </div>



    </div>

    <a href="/saved" class="btn btn-success mt-3" role="button" aria-pressed="true">View Saved</a>
    <a href="/" class="btn btn-warning ml-4 mt-3" role="button" aria-pressed="true">Take Me Home</a>

</section>