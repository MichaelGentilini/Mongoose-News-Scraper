<body>

  <section>

    <div class="container">

      <div class="container mt-5">
        <div class="card my-5 text-center bg-dark ">

          <div class="card-body border-primary">
            <h2 class="results-card-title bg-dark text-white pt-3 pb-3">Results</h2>
            <div class="card border-primary mt-3" id="results">

              {{#unless articles.length}}
              <h4 class="text-center">ðŸ‘€ Looks like we don't have any articles. ðŸ‘€</h4>
              <h5> ðŸ‘† Pick your source above ðŸ‘† </h5>
              {{/unless}}

              {{#each articles}}

              <div class="mt-3">
                <div class="row pl-2">

                  <div class="col-1 pr-2">
                    <div class="btn-group-vertical text-center ">
                      <a class="btn mt-5 btn-outline-warning text-warning notes"><i class="far fa-sticky-note"></i></a>
                      <a class="btn btn-outline-success text-success save"><i class="far fa-save"></i></a>
                      <a class="btn btn-outline-danger text-danger delete"><i class="fas fa-trash"></i></a>
                    </div>
                  </div>

                  <div class="col">
                    <div class="card" data-_id={{this._id}}>
                      <div>

                        <h4 class="card-header text-white mt-2 px-5 mb-2">
                          <a class="article-link" target="_blank" href="{{this.link}}">{{this.title}}</a>
                        </h4>

                        <img id="media-image" class="card-img-top" src="{{this.image}}" alt="Card image cap">
                        <p><strong>Source:</strong> <em>{{this.source}}</em></p>

                        {{#unless this.summary}}
                        <h6 class="mt-2 text-center pl-5 text-left">Summary: Not available from
                          <em>{{this.source}}</em></h6>
                        {{/unless}}

                        <h6 class="mt-2 pl-5 text-left">{{this.summary}}</h6>
                      </div>
                    </div>
                  </div>
                  <div class="col-1"></div>

                </div>
                {{/each}}

