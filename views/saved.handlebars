<section>
  <div class="container">
    <div class="card bg-success p-4  mt-5">
      <div class="container savedResults">
        <img class="card-img-top pb-3" src="/img/fav.jpg" alt="Card image cap">

        {{#each saved}}
        <div class="card my-3 px-5 py-2">

          <div class="row">
            <div class="col-1 pt-2 pr-5">
              <div class="btn-group-vertical text-center ">


                {{#if note}}
                <a class="btn mt btn-warning text-white addNote" note-id={{this._id}} isNote={{this.isNote}}><i
                    class="far fa-sticky-note fa-2x"></i></a>
                {{else}}
                <a class="btn mt btn-outline-warning text-warning addNote" note-id={{this._id}}
                  isNote={{this.isNote}}><i class="far fa-sticky-note fa-2x"></i></a>
                {{/if}}

                {{#if saved}}
                <a class="btn btn-success text-white saveArticle" save-id={{this._id}} isSaved={{this.isSaved}}><i
                    class="far fa-save fa-2x"></i></a>
                {{else}}
                <a class="btn btn-outline-success text-success saveArticle" isSaved={{this.isSaved}}
                  save-id={{this._id}}><i class="far fa-save fa-2x"></i></a>
                {{/if}}
                <a class="btn btn-outline-danger text-danger deleteArticle" delete-id={{this._id}}><i
                    class="fas fa-trash fa-2x"></i></a>

              </div>
            </div>

            <div class="col">
              <div class="card text-center" data-_id={{this._id}}>
                <div class="py-2">

                  <h3 class="card-header px-5 mb-2">
                    <a class="article-link text-left" target="_blank" href="{{this.link}}">{{this.title}}</a>
                  </h3>
                  {{#if this.image}}
                  <img src="{{this.image}}" class="mt-2">
                  {{/if}}

                  {{#if this.summary}}
                  <img src="{{this.summary}}" class="mt-2">

                  {{/if}} <h6><em>{{this.source}}</em></h6>

                </div>
              </div>
            </div>
            <div class="col-1"></div>
          </div>
        </div>


        {{/each}}

        {{#unless saved}}
        <div class="card text-center">
          <div class="card-body">
            <h3 class="text-info">There are no saved articles</h3>
            <h4 class="text-info"> Pick one of the sources above above and select the <button><i
                  class="far fa-save text-success"></i></button> icon </h4>
          </div>
          {{/unless}}

        </div>
      </div>

    </div>
  </div>
  </div>

</section>